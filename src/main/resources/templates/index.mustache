{{>layout/header}}  <!-- 다른 파일 가져오기 -->
    <h1>스프링 부트로 시작하는 웹 서비스 Ver.4</h1>
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-6">
                <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
                {{#userName}}   <!-- 머스테치는 if문 제공 안함. true/false만 판단 -->
                    Logged in as: <span id="user">{{userName}}</span>
                    <a href="/logout" class="btn btn-info active" role="button">Logout</a>
                    <!-- 스프링 시큐리티 제공 로그아웃 URL -->
                {{/userName}}
                {{^userName}}   <!-- 머스테치에서 해당 값이 존재하지 않을 경우. -->
                    <a href="/oauth2/authorization/google" class="btn btn-success active" role="button">
                        Google Login
                    </a>   <!-- 스프링 시큐리티 제공 로그인 URL -->
                    <a href="/oauth2/authorization/naver" class="btn btn-secondary active" role="button">
                        Naver Login
                    </a>    <!-- 네이버 로그인 URL은 oauth.properties에 등록한 redirect-uri값에 맞춰 자동 등록된다. -->
                {{/userName}}
            </div>
        </div>
    </div>
    <!-- 목록 출력 영역 -->
    <table class="table table-horizontal table-bordered">
        <thread class="thread-strong">
            <tr>
                <th>게시글번호</th>
                <th>제목</th>
                <th>작성자</th>
                <th>최종수정일</th>
            </tr>
        </thread>
        <tbody id="tbody">
        {{#posts}}  <!-- posts라는 List를 순회한다. Java의 for문-->
            <tr>
                <td>{{id}}</td>         <!-- List에서 뽑아낸 객체의 필드 -->
                <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                <td>{{author}}</td>
                <td>{{modifiedDate}}</td>
            </tr>
        {{/posts}}
        </tbody>
    </table>
{{>layout/footer}}